<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000"/> <!-- Light shadow -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Main Card Layer -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <!-- Gradient Background -->
            <gradient
                android:startColor="#E3F2FD"
                android:endColor="#BBDEFB"
                android:angle="135" />

            <!-- Rounded corners -->
            <corners android:radius="16dp" />

            <!-- Border -->
            <stroke
                android:width="1dp"
                android:color="#90CAF9" />
        </shape>
    </item>
</layer-list>

