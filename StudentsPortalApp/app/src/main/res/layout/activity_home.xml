<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    android:padding="16dp">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/logoutButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/amaranth_bold"
            android:text="Welcome to Student Portal"
            android:textColor="#333333"
            android:textSize="45sp"
            android:textStyle="bold" />

            <!-- Animated View Divider -->
            <View
                android:layout_width="600dp"
                android:layout_height="6dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/gradient_divider" />


        <!-- Feature Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:weightSum="3">

            <!-- Notice -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/card_bg"
                android:layout_margin="4dp">

                <ImageButton
                    android:id="@+id/noticeButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/notice"
                    android:background="@drawable/rounded_button_bg"
                    android:scaleType="centerCrop"
                    android:elevation="6dp"
                    android:contentDescription="Notice" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notices"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Timetable -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/card_bg"
                android:layout_margin="4dp">

                <ImageButton
                    android:id="@+id/timetableButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/timetable"
                    android:background="@drawable/rounded_button_bg"
                    android:scaleType="centerCrop"
                    android:elevation="6dp"
                    android:contentDescription="Timetable" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timetable"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/card_bg"
                android:layout_margin="4dp">

                <ImageButton
                    android:id="@+id/profileButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/profile"
                    android:background="@drawable/rounded_button_bg"
                    android:scaleType="centerCrop"
                    android:elevation="6dp"
                    android:contentDescription="Profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:weightSum="3">

            <!-- Grades -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/card_bg"
                android:layout_margin="4dp">

                <ImageButton
                    android:id="@+id/gradesButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/grades"
                    android:background="@drawable/rounded_button_bg"
                    android:scaleType="centerCrop"
                    android:elevation="6dp"
                    android:contentDescription="Grades" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grades"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Calendar -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/card_bg"
                android:layout_margin="4dp">

                <ImageButton
                    android:id="@+id/calendarButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/calendar"
                    android:background="@drawable/rounded_button_bg"
                    android:scaleType="centerCrop"
                    android:elevation="6dp"
                    android:contentDescription="Calendar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calendar"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Events -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/card_bg"
                android:layout_margin="4dp">

                <ImageButton
                    android:id="@+id/eventsButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/events"
                    android:background="@drawable/rounded_button_bg"
                    android:scaleType="centerCrop"
                    android:elevation="6dp"
                    android:contentDescription="Events" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

            <!-- Bottom Banner / Picture -->
            <ImageView
                android:id="@+id/bottomImage"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/student_banner"
                android:scaleType="fitXY"
                android:contentDescription="Student Portal Banner"/>

        </LinearLayout>
    </ScrollView>

    <!-- Help Button -->
    <RelativeLayout
        android:id="@+id/helpBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/logoutButton"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:id="@+id/helpBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/help_button_bg"
            android:src="@drawable/ic_help"
            android:scaleType="centerInside"
            android:contentDescription="Help Button"
            android:elevation="8dp"
            android:padding="12dp" />
    </RelativeLayout>



    <!-- Logout Button fixed at the bottom -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@android:color/holo_red_dark"
        android:padding="14dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</RelativeLayout>






