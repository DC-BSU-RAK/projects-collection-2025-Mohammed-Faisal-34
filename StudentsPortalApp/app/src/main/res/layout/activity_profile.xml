<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    android:padding="24dp">

<ScrollView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_above="@+id/logoutButton"
android:layout_alignParentTop="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="45sp"
        android:textStyle="bold"
        android:fontFamily="@font/amaranth_bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/profile_image"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="👤 Name"
        android:textSize="18sp"
        android:textColor="#414040"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mohammed Faisal"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Email -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✉️ Email"
        android:textSize="18sp"
        android:textColor="#414040"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="faisalferoz@gmail.com"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Course -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🎓 Course"
        android:textSize="18sp"
        android:textColor="#414040"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BSc Creative Computing"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Campus -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🏢 Campus"
        android:textSize="18sp"
        android:textColor="#414040"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bath Spa University, RAK"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />
</LinearLayout>
</ScrollView>

    <!-- Logout Button at bottom -->
<Button
android:id="@+id/logoutButton"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
android:backgroundTint="@android:color/holo_red_dark"
android:padding="14dp"
android:text="Logout"
android:textAllCaps="false"
android:textColor="#FFFFFF"
android:textStyle="bold"
android:elevation="6dp"
android:layout_marginTop="12dp"/>
    </RelativeLayout>

